{
  "name": "lightweight-editor",
  "version": "1.0.0",
  "description": "A lightweight cross-platform code editor",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "clean": "rimraf dist",
    "predev": "npm run clean",
    "dev": "cross-env NODE_ENV=development concurrently \"npm run start\" \"npm run watch\"",
    "watch": "webpack --config webpack.config.js --watch",
    "prebuild": "npm run clean",
    "build": "cross-env NODE_ENV=production webpack --config webpack.config.js --mode production",
    "test": "jest"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@headlessui/react": "^1.7.18",
    "@heroicons/react": "^2.2.0",
    "@monaco-editor/react": "^4.6.0",
    "electron-store": "^8.1.0",
    "monaco-editor": "^0.41.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.22.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "autoprefixer": "^10.4.17",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "css-loader": "^6.10.0",
    "electron": "^28.1.0",
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.6.0",
    "monaco-editor-webpack-plugin": "^7.1.0",
    "postcss": "^8.4.35",
    "postcss-loader": "^8.1.0",
    "rimraf": "^5.0.5",
    "style-loader": "^3.3.4",
    "tailwindcss": "^3.4.1",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.90.1",
    "webpack-cli": "^5.1.4"
  }
}
